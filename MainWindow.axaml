<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"  
		MinWidth="800" MinHeight="500"
        x:Class="FocSet.MainWindow"
        Title="FocSet" Icon="primus.ico">
   
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
    
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Select the Game file (exe):" 
                   VerticalAlignment="Center" />
        <TextBox x:Name="ExePathTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" 
                 />
        <Button Margin="5,0,0,0" Grid.Row="0" Grid.Column="4" Content="Browse" 
                Click="BrowseExe_Click" />
        
    
        <TextBlock Grid.Row="1" Grid.Column="0" Text="In-game Name:" 
                   VerticalAlignment="Center" />
        <TextBox x:Name="InGameNameTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                 />
        
    
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Select Body Part:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="BodyPartComboBox" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3"
                  />

		<HeaderedContentControl Grid.Row="3" Grid.Column="0" Grid.RowSpan="1" Header="Select classes" Margin="0,0,10,0">
			
			<StackPanel>
				<CheckBox x:Name="ScoutCheckBox" Content="Scout" />
				<CheckBox x:Name="LeaderCheckBox" Content="Leader" />
				<CheckBox x:Name="SoldierCheckBox" Content="Soldier" />
				<CheckBox x:Name="ScientistCheckBox" Content="Scientist" />
			</StackPanel>
		</HeaderedContentControl>

		<HeaderedContentControl Grid.Row="4" Grid.Column="0" Grid.RowSpan="1" Header="Advanced" Margin="0,10,10,0">
			<StackPanel>
				<CheckBox Name="AsymmetricArms" Click="AsymmetricArms_Click" Content="Asymmetric Arms"/>
			</StackPanel>
		</HeaderedContentControl>



		<HeaderedContentControl Name="PartsPanel" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="6" Header="Select Parts">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="110"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Column="0" Grid.Row="0" Text="Select Part 1:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="0" x:Name="Part1ComboBox"/>
				
				<TextBlock Grid.Column="0" Grid.Row="1" Text="Select Part 2:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="1" x:Name="Part2ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="2" Text="Select Part 3:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="2" x:Name="Part3ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="3" Text="Select Part 4:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="3" x:Name="Part4ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="4" Text="Select Part 5:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="4" x:Name="Part5ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="5" Text="Select Part 6:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="5" x:Name="Part6ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="6" Text="Select Part 7:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="6" x:Name="Part7ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="7" Text="Select Part 8:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="7" x:Name="Part8ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="8" Text="Select Part 9:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="8" x:Name="Part9ComboBox"/>

				<TextBlock Grid.Column="0" Grid.Row="9" Text="Select Part 10:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="9" x:Name="Part10ComboBox"/>
			</Grid>
		</HeaderedContentControl>

		<HeaderedContentControl Name="PartsPanelAA" IsVisible="False" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="6" Header="Select Parts">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="110"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="110"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- Left Arm -->
				<TextBlock Grid.Column="0" Grid.Row="0" Text="Left Part 1:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="0"/>

				<TextBlock Grid.Column="0" Grid.Row="1" Text="Left Part 2:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="1"/>

				<TextBlock Grid.Column="0" Grid.Row="2" Text="Left Part 3:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="2" />

				<TextBlock Grid.Column="0" Grid.Row="3" Text="Left Part 4:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="3" />

				<TextBlock Grid.Column="0" Grid.Row="4" Text="Left Part 5:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="4" />

				<TextBlock Grid.Column="0" Grid.Row="5" Text="Left Part 6:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="5" />

				<TextBlock Grid.Column="0" Grid.Row="6" Text="Left Part 7:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="6" />

				<TextBlock Grid.Column="0" Grid.Row="7" Text="Left Part 8:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="7" />

				<TextBlock Grid.Column="0" Grid.Row="8" Text="Left Part 9:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="8" />

				<TextBlock Grid.Column="0" Grid.Row="9" Text="Left Part 10:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="1" Grid.Row="9" />

				<!-- Right arm -->

				<TextBlock Grid.Column="2" Grid.Row="0" Text="Right Part 1:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="0"/>

				<TextBlock Grid.Column="2" Grid.Row="1" Text="Right Part 2:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="1"/>

				<TextBlock Grid.Column="2" Grid.Row="2" Text="Right Part 3:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="2" />

				<TextBlock Grid.Column="2" Grid.Row="3" Text="Right Part 4:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="3" />

				<TextBlock Grid.Column="2" Grid.Row="4" Text="Right Part 5:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="4" />

				<TextBlock Grid.Column="2" Grid.Row="5" Text="Right Part 6:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="5" />

				<TextBlock Grid.Column="2" Grid.Row="6" Text="Right Part 7:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="6" />

				<TextBlock Grid.Column="2" Grid.Row="7" Text="Right Part 8:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="7" />

				<TextBlock Grid.Column="2" Grid.Row="8" Text="Right Part 9:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="8" />

				<TextBlock Grid.Column="2" Grid.Row="9" Text="Right Part 10:" VerticalAlignment="Center" />
				<ComboBox Grid.Column="3" Grid.Row="9" />
				
			</Grid>
		</HeaderedContentControl>
		
        <Button Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="3" 
                Content="Add Part" Click="AddPart_Click" 
                Background="#737E8B"  Margin="0,10"/>
        
      
        <TextBlock x:Name="StatusLabel" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="3" 
                   Text=""  HorizontalAlignment="Center"/>
    </Grid>

</Window>
