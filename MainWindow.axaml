<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FocSet.MainWindow"
        Title="FocSet">
   
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
    
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Select the Game file (exe):" 
                   VerticalAlignment="Center" />
        <TextBox x:Name="ExePathTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" 
                 />
        <Button Grid.Row="0" Grid.Column="4" Content="Browse" 
                Click="BrowseExe_Click" />
        
    
        <TextBlock Grid.Row="1" Grid.Column="0" Text="In-game Name:" 
                   VerticalAlignment="Center" />
        <TextBox x:Name="InGameNameTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                 />
        
    
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Select Body Part:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="BodyPartComboBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                  />
        
    
        <TextBlock Grid.Row="3" Grid.Column="0" Text="^ Select classes" 
                    Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.RowSpan="4">
            <CheckBox x:Name="ScoutCheckBox" Content="Scout" />
            <CheckBox x:Name="LeaderCheckBox" Content="Leader" />
            <CheckBox x:Name="SoldierCheckBox" Content="Soldier" />
            <CheckBox x:Name="ScientistCheckBox" Content="Scientist" />
        </StackPanel>
      
        <TextBlock Grid.Row="3" Grid.Column="1" Text="Select Parts:" 
                    VerticalAlignment="Center"/>
        
    
        <TextBlock Grid.Row="4" Grid.Column="1" Text="Select Part 1:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part1ComboBox" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="5" Grid.Column="1" Text="Select Part 2:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part2ComboBox" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="6" Grid.Column="1" Text="Select Part 3:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part3ComboBox" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="7" Grid.Column="1" Text="Select Part 4:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part4ComboBox" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="8" Grid.Column="1" Text="Select Part 5:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part5ComboBox" Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="9" Grid.Column="1" Text="Select Part 6:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part6ComboBox" Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="10" Grid.Column="1" Text="Select Part 7:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part7ComboBox" Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="11" Grid.Column="1" Text="Select Part 8:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part8ComboBox" Grid.Row="11" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="12" Grid.Column="1" Text="Select Part 9:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part9ComboBox" Grid.Row="12" Grid.Column="2" Grid.ColumnSpan="2"
                  />
                  
        <TextBlock Grid.Row="13" Grid.Column="1" Text="Select Part 10:" 
                   VerticalAlignment="Center" />
        <ComboBox x:Name="Part10ComboBox" Grid.Row="13" Grid.Column="2" Grid.ColumnSpan="2"
                  />
        
 
        <Button Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="3" 
                Content="Add Part" Click="AddPart_Click" 
                Background="#737E8B"  Margin="0,10"/>
        
      
        <TextBlock x:Name="StatusLabel" Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="3" 
                   Text=""  HorizontalAlignment="Center"/>
    </Grid>

</Window>
